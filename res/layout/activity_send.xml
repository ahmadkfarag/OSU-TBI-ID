<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SendActivity" >

    <TextView
        android:id="@+id/sendTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Do you want to email the data?" />

    <ImageButton
        android:id="@+id/sendYes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/sendTitle"
        android:layout_alignTop="@+id/sendNo"
        android:src="@drawable/yes_50" />

    <ImageButton
        android:id="@+id/sendNo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/sendTitle"
        android:layout_below="@+id/sendTitle"
        android:layout_marginTop="104dp"
        android:src="@drawable/no_50" />

</RelativeLayout>
